// Prisma schema for Secure API Handler Framework
// This is a sample schema - customize it for your application

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// User Management
// ============================================

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      UserRole @default(USER)
  tenantId  String?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  tenant     Tenant?      @relation(fields: [tenantId], references: [id])
  projects   Project[]    @relation("ProjectMembers")
  ownedProjects Project[] @relation("ProjectOwner")
  assignedTasks Task[]

  @@map("users")
}

model Tenant {
  id          String   @id @default(cuid())
  name        String
  domain      String?  @unique
  config      Json     @default("{}")
  isActive    Boolean  @default(true)

  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  users       User[]
  projects    Project[]

  @@map("tenants")
}

// ============================================
// Project Management
// ============================================

model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  status      ProjectStatus @default(PLANNING)
  priority    Priority @default(MEDIUM)
  tags        String[] @default([])
  tenantId    String?
  ownerId     String

  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  tenant      Tenant?         @relation(fields: [tenantId], references: [id])
  owner       User            @relation("ProjectOwner", fields: [ownerId], references: [id])
  members     User[]          @relation("ProjectMembers")
  tasks       Task[]

  @@map("projects")
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  status      TaskStatus @default(TODO)
  priority    Priority @default(MEDIUM)
  projectId   String
  assigneeId  String?

  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  project     Project   @relation(fields: [projectId], references: [id])
  assignee    User?     @relation(fields: [assigneeId], references: [id])

  @@map("tasks")
}

// ============================================
// Enums
// ============================================

enum UserRole {
  USER
  ADMIN
  SUPER_ADMIN
}

enum ProjectStatus {
  PLANNING
  ACTIVE
  COMPLETED
  ARCHIVED
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  REVIEW
  DONE
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

// ============================================
// Audit Trail System
// ============================================

model AuditLog {
  id          String   @id @default(cuid())
  
  // Event Information
  eventType   AuditEventType
  category    AuditCategory
  action      String              // e.g., "user.login", "project.update", "data.delete"
  description String?
  
  // Context Information
  userId      String?
  userName    String?             // Denormalized for historical accuracy
  userEmail   String?             // Denormalized for historical accuracy
  tenantId    String?
  tenantName  String?             // Denormalized for historical accuracy
  
  // Request Context
  ipAddress   String?
  userAgent   String?
  requestId   String?
  method      String?             // HTTP method: GET, POST, PUT, DELETE
  endpoint    String?             // API endpoint path
  
  // Resource Information
  resourceType String?            // e.g., "Project", "User", "Task"
  resourceId   String?
  
  // Data Change Tracking
  oldData     Json?               // Before state (for UPDATE/DELETE)
  newData     Json?               // After state (for CREATE/UPDATE)
  changes     Json?               // Computed diff of changes
  
  // Status and Result
  status      AuditStatus @default(SUCCESS)
  statusCode  Int?                // HTTP status code
  errorMessage String?
  
  // Metadata
  metadata    Json?               // Additional custom metadata
  tags        String[] @default([])
  
  // Compliance and Retention
  severity    AuditSeverity @default(INFO)
  retentionCategory String @default("general") // For retention policy management
  expiresAt   DateTime?           // When this log should be deleted
  
  // Performance Tracking
  executionTimeMs Int?
  
  // Timestamps
  createdAt   DateTime @default(now())
  
  // Indexes for efficient querying
  @@index([userId, createdAt])
  @@index([tenantId, createdAt])
  @@index([eventType, createdAt])
  @@index([category, createdAt])
  @@index([resourceType, resourceId])
  @@index([action, createdAt])
  @@index([status, createdAt])
  @@index([expiresAt])
  @@index([requestId])
  @@index([createdAt])
  
  @@map("audit_logs")
}

// ============================================
// Audit Enums
// ============================================

enum AuditEventType {
  CREATE      // Resource creation
  READ        // Resource read/view
  UPDATE      // Resource modification
  DELETE      // Resource deletion
  AUTH        // Authentication events
  AUTHZ       // Authorization events
  SECURITY    // Security-related events
  SYSTEM      // System events
  EXPORT      // Data export
  IMPORT      // Data import
  CONFIG      // Configuration changes
  CUSTOM      // Custom events
}

enum AuditCategory {
  DATA        // Data operations (CRUD)
  AUTH        // Authentication
  SECURITY    // Security events
  SYSTEM      // System operations
  COMPLIANCE  // Compliance-related
  ADMIN       // Administrative actions
  USER        // User actions
}

enum AuditStatus {
  SUCCESS     // Operation succeeded
  FAILURE     // Operation failed
  PARTIAL     // Partial success
  PENDING     // Operation pending
}

enum AuditSeverity {
  DEBUG       // Debug information
  INFO        // Informational
  NOTICE      // Normal but significant
  WARNING     // Warning conditions
  ERROR       // Error conditions
  CRITICAL    // Critical conditions
  ALERT       // Action must be taken immediately
  EMERGENCY   // System is unusable
}
